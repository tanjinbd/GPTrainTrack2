<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        />
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/backrepeat"
    android:scrollbars="vertical" >

    <LinearLayout
       
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:paddingTop="5dp"
        
        android:background="@drawable/backrepeat"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/mapshow_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/l1"
            android:paddingBottom="5dp"
            android:background="@null"
             />

        <ImageButton
            android:id="@+id/mapshow_button_khulna"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/l2"
            android:paddingBottom="5dp"
            android:background="@null"
             />

        <ImageButton
            android:id="@+id/mapshow_button_sylhet"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/l3"
            android:paddingBottom="5dp"
            android:background="@null"
             />

        <ImageButton
            android:id="@+id/mapshow_button_dinaj"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/l4"
            android:paddingBottom="5dp"
            android:background="@null"
             />

        <ImageButton
            android:id="@+id/mapshow_button_mymen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/l5"
            android:paddingBottom="5dp"
            android:background="@null"
             />
    </LinearLayout>

</ScrollView>
</LinearLayout>